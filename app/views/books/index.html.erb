<p style="color: green"><%= notice %></p>

<h1 class="text-4xl font-bold mb-8">Books</h1>

<div>
  <ul class="flex gap-4 border-b-2">
    <% @genres.each do |genre| %>
      <li class="text-blue-500"><%= genre %></li>
    <% end %>
  </ul>
</div>

<div id="books">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>ID</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.description %></td>
          <td><%= book.id %></td>
          <td><%= link_to "Show", book_path(book), class: 'inline-block bg-green-500 text-white px-4 py-2 rounded hover:opacity-80' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<hr />
