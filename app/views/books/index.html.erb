=begin%>
 <div>
  <% @posts.each do |post| %>
    <div id=<%= post['id'] %>>
      <h2>【ID:<%= post['id'] %>】<%= post['title'] %></h2>
      <p><%= post['body'] %></p>
    </div>
  <% end %>
</div> 
